<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merahDasar"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/iv_logo_splash"
        android:layout_width="249dp"
        android:layout_height="143dp"
        android:background="@drawable/emtwnty_logo"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/tv_greeting_splash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>
    <TextView
        android:id="@+id/tv_greeting_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_greeting_splashActivity"
        android:textSize="24sp"
        android:textColor="#fafafa"
        android:fontFamily="@font/font_homework"
        android:layout_marginBottom="64dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>