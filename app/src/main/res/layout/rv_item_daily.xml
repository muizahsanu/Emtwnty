<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/merahKedua"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_checkbox_uncompletedp">
        </ImageButton>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/tv_namaAktivitas_rvDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Aktivitas"
                android:textSize="20sp"
                android:textColor="@color/whiteSecond">
            </TextView>
            <TextView
                android:id="@+id/tv_waktuAktivitas_rvDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Aktivitas"
                android:textSize="14sp"
                android:textColor="#99FFFBE7">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>